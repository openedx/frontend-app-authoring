{
  "extends": [
    "config:base",
    "schedule:daily",
    ":rebaseStalePrs",
    ":semanticCommits"
  ],
  "patch": {
    "automerge": true
  },
  "rebaseStalePrs": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["@edx", "@openedx"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
