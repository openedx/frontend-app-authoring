name: Handle release testing issues
on:
  issues:
    types: [labeled]

jobs:
  handle-release-testing:
    uses: openedx/.github/.github/workflows/add-release-testing-issues-to-project.yml@master
    secrets:
      GITHUB_APP_ID: ${{ secrets.GRAPHQL_AUTH_APP_ID }}
      GITHUB_APP_PRIVATE_KEY: ${{ secrets.GRAPHQL_AUTH_APP_PEM }}
